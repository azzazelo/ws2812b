{
  "name": "socket-lights",
  "version": "1.0.0",
  "description": "Express, johnny-five, socket.io clinet controler for ws2812b",
  "main": "app.js",
  "scripts": {
    "clean": "rm -rf ./public/build",
    "build:watch": "npm run clean && NODE_ENV=development webpack -d --watch",
    "build:dev": "npm run clean && NODE_ENV=development webpack -d",
    "build:prod": "npm run clean && NODE_ENV=production  webpack -p",
    "start": "npm run clean && NODE_ENV=production  webpack -p && nodemon -r esm server/server.js",
    "server:prod": "NODE_ENV=production node -r esm  server.js",
    "lint": "eslint ./ --cache --ignore-pattern .gitignore"
  },
  "pre-commit": [
    "lint"
  ],
  "author": "azzazel",
  "license": "ISC",
  "dependencies": {
    "@jaames/iro": "^3.4.1",
    "app-root-path": "^2.2.1",
    "bulma": "^0.7.4",
    "esm": "^3.2.25",
    "express": "^4.16.3",
    "johnny-five": "^0.15.0",
    "jquery": "^3.3.1",
    "morgan": "^1.9.1",
    "node-pixel": "^0.10.0",
    "nodebots-interchange": "^1.3.0",
    "purecss": "^1.0.1",
    "serialport": "^7.1.5",
    "socket.io": "^2.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "babel-loader": "^8.0.6",
    "css-loader": "^1.0.0",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.19.1",
    "postcss-loader": "^2.1.6",
    "pre-commit": "^1.2.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  }
}
